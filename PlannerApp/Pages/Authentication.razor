@inherits AuthenticationBase
@page "/authentication/{action}"
@using PlannerApp.Client.Components.AccountComponents

@if (ActionCased == "register")
{
    <RegisterForm GoToLoginAction="@(() => ChangePage("signin"))"></RegisterForm>
}
else if (ActionCased == "signin" || string.IsNullOrEmpty(ActionCased))
{
    <LoginForm GoToRegisterAction="@(() => ChangePage("register"))" ></LoginForm>
}