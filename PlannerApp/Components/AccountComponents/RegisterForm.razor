@inherits RegisterFormBase


<div class="box">
    <h1 class="title is-5">Welcome,</h1>
    <h2 class="subtitle is-5 has-text-grey-light">the following is all that's required.</h2>
    <EditForm Model="RegisterModel" OnValidSubmit="RegisterUser">
        <UIComponents.FluentValidator TValidator="PlannerApp.Shared.Validators.RegisterModelValidator"></UIComponents.FluentValidator>
        <Field Label="Email Address">
            <ControlContent>
                <InputField @bind-Value="RegisterModel.Email"></InputField>
            </ControlContent>
            <ValidationContent>
                <ValidationMessage For="@(() => RegisterModel.Email)"></ValidationMessage>
            </ValidationContent>            
        </Field>
        <Field Label="Password">
            <ControlContent>
                <InputField @bind-Value="RegisterModel.Password"></InputField>
            </ControlContent>
            <ValidationContent>
                <ValidationMessage For="@(() => RegisterModel.Password)"></ValidationMessage>
            </ValidationContent>
        </Field>
        <Field Label="Confirm Password">
            <ControlContent>
                <InputField @bind-Value="RegisterModel.ConfirmPassword"></InputField>
            </ControlContent>
            <ValidationContent>
                <ValidationMessage For="@(() => RegisterModel.ConfirmPassword)"></ValidationMessage>
            </ValidationContent>
        </Field>
        <Field CssClass="has-text-centered has-padding-top-20">
            <ControlContent>
                <Button Type="submit" CssClass="has-width-200" Colour="ComponentColour.Success">Sign Up</Button>
                <div class="has-padding-10">or</div>
                <Button CssClass="has-width-200 is-outlined" Colour="ComponentColour.Primary" OnClickCallback="GoToLoginAction">Sign In</Button>
            </ControlContent>
        </Field>
    </EditForm>
</div>
